  {{!-- Chart.js Script tag --}}
  <script>

    var ctx = document.getElementById("myChart").getContext('2d');
    //Score array
    var scores = [{{{ scoreArray }}}]

    // Mean/Average
    var total = 0;
    for (var i = 0; i < scores.length; i++) {
      total += scores[i];
    }
    var avg = total / scores.length;

    // median
    var m = arr => {
      var mid = Math.floor(arr.length / 2),
        nums = [...arr].sort((a, b) => a - b);
      return arr.length % 2 !== 0 ? nums[mid] : (nums[mid - 1] + nums[mid]) / 2;
    };
    var median = m(scores);

    //Mode
    var md = a =>
      Object.values(
        a.reduce((count, e) => {
          if (!(e in count)) {
            count[e] = [0, e];
          }

          count[e][0]++;
          return count;
        }, {})
      ).reduce((a, v) => v[0] < a[0] ? a : v, [0, null])[1];
    var mode = md(scores);
    //----------------------//

    var myChart = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: ["Mean", "Median", "Mode"],
        datasets: [{
          label: 'Distribution of marks in %',
          data: [avg, median, mode],
          backgroundColor: [
            'rgba(255, 99, 132, 0.2)',
            'rgba(54, 162, 235, 0.2)',
            'rgba(153, 102, 255, 0.2)'
          ],
          borderColor: [
            'rgba(255,99,132,1)',
            'rgba(54, 162, 235, 1)',
            'rgba(153, 102, 255, 1)'
          ],
          borderWidth: 1
        }]
      },
      options: {
        scales: {
          yAxes: [{
            ticks: {
              beginAtZero: true
            }
          }]
        }
      }
    });
  </script>


